{
	"name": "Tinyurl",
	"version": "0.0.1",
	"description": "A tinyurl browser extension",
	"manifest_version": 2,
	"permissions": [
		"tabs", "activeTab", "contextMenus", "clipboardWrite",
		"storage",
		"https://tinyurl.com/*"
	],

	"options_page": "view/options/options.html",

	"icons": {
		"128": "icons/icon128.png",
		"96": "icons/icon96.png",
		"64": "icons/icon64.png",
		"32": "icons/icon32.png",
		"16": "icons/icon16.png"
	},

	"background": {
		"scripts": [
			"background_scripts/core.js",
			"background_scripts/context_menu.js",
			"background_scripts/popup.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Tinyurl",
		"default_popup": "popup/popup.html"
	}
}
