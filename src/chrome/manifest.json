{
	"name": "Tinyurl",
	"version": "0.0.1",
	"description": "A tinyurl browser extension",
	"manifest_version": 2,
	"permissions": ["tabs", "contextMenus", "https://tinyurl.com/*"],

	"options_page": "view/options/options.html",

	"icons": {},

	"background": {
		"scripts": [
			"background_scripts/core.js",
			"background_scripts/context_menu.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Tinyurl",
		"default_popup": "popup/popup.html"
	}
}
